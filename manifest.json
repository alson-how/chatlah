{
  "name": "sales-agent",
  "version": "1.0.0",
  "description": "Sales tools for JaBlanc Interiors",
  "tools": [
    {
      "name": "rag_search",
      "description": "Semantic search over the website index",
      "input_schema": {
        "type": "object",
        "properties": { "query": {"type":"string"}, "k": {"type":"integer","default":6} },
        "required": ["query"]
      }
    },
    {
      "name": "crm_create_lead",
      "description": "Create a CRM lead/contact",
      "input_schema": {
        "type": "object",
        "properties": {
          "full_name": {"type":"string"},
          "phone": {"type":"string"},
          "email": {"type":"string"},
          "source": {"type":"string","default":"WhatsApp"},
          "notes": {"type":"string"}
        },
        "required": ["full_name", "phone"]
      }
    },
    {
      "name": "crm_update_lead",
      "description": "Update lead fields or stage",
      "input_schema": {
        "type": "object",
        "properties": { "lead_id": {"type":"string"}, "fields": {"type":"object"} },
        "required": ["lead_id","fields"]
      }
    },
    {
      "name": "calendar_find_slots",
      "description": "Find next available meeting slots",
      "input_schema": {
        "type": "object",
        "properties": {
          "duration_min": {"type":"integer","default":30},
          "days_ahead": {"type":"integer","default":14},
          "timezone": {"type":"string","default":"Asia/Kuala_Lumpur"}
        }
      }
    },
    {
      "name": "calendar_book_meeting",
      "description": "Book a meeting",
      "input_schema": {
        "type": "object",
        "properties": {
          "slot_start_iso": {"type":"string"},
          "duration_min": {"type":"integer","default":30},
          "attendee_name": {"type":"string"},
          "attendee_phone": {"type":"string"},
          "attendee_email": {"type":"string"}
        },
        "required": ["slot_start_iso","attendee_name","attendee_phone"]
      }
    },
    {
      "name": "quote_generate",
      "description": "Generate a rough quote based on project details",
      "input_schema": {
        "type": "object",
        "properties": {
          "project_type": {"type":"string","enum":["residential","commercial"]},
          "area_sqft": {"type":"number"},
          "scope": {"type":"array","items":{"type":"string"}},
          "budget_range": {"type":"string"}
        },
        "required": ["project_type","area_sqft"]
      }
    },
    {
      "name": "payments_send_link",
      "description": "Send a payment or deposit link to client",
      "input_schema": {
        "type": "object",
        "properties": {
          "lead_id": {"type":"string"},
          "amount_myr": {"type":"number"},
          "purpose": {"type":"string"}
        },
        "required": ["lead_id","amount_myr"]
      }
    }
  ]
}
